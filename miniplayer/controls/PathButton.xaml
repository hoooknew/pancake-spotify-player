<Button x:Class="miniplayer.controls.PathButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:miniplayer.controls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Button.Resources>
        <Style TargetType="Path">
            <Setter Property="Fill" Value="{Binding PathFill, RelativeSource={RelativeSource AncestorType={x:Type local:PathButton}}}"/>
        </Style>
    </Button.Resources>
    <!--https://learn.microsoft.com/en-us/dotnet/desktop/wpf/controls/button-styles-and-templates?view=netframeworkdesktop-4.8&viewFallbackFrom=netdesktop-6.0-->
    <Viewbox>
        <Path
            DataContext="{Binding '', RelativeSource={RelativeSource AncestorType={x:Type local:PathButton}}}"
            Data="{Binding PathData}"
            Fill="{Binding PathFill}"
            Stroke="{Binding PathStroke}"
            StrokeThickness="{Binding PathStrokeThickness}"/>
    </Viewbox>
</Button>
