<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:options="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
                    mc:Ignorable="options">

    <!--App Specific-->
    <SolidColorBrush x:Key="PathButtonFillBrush" Color="#4d4d4d" options:Freeze="True"/>
    <SolidColorBrush x:Key="PathButtonFillBrush.MouseOver" Color="Black" options:Freeze="True"/>
    <!--Spotify Green-->
    <Color x:Key="AccentColor">#FF1ED760</Color>
    <SolidColorBrush x:Key="TextForegroundBrush" Color="#4d4d4d" options:Freeze="True"/>
    <SolidColorBrush x:Key="AltTextForegroundBrush" Color="#999999" options:Freeze="True"/>
    <SolidColorBrush x:Key="DefaultBorderBrush" Color="#CCCCCC" options:Freeze="True"/>
    <SolidColorBrush x:Key="LightBackgroundBrush" Color="#bbbbbb" options:Freeze="True"/>
    <SolidColorBrush x:Key="WindowBrush" Color="White" options:Freeze="True"/>

</ResourceDictionary>