<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:options="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
                    mc:Ignorable="options">

    <!--App Specific-->    
    <SolidColorBrush x:Key="PathButtonFillBrush" Color="#888888" options:Freeze="True"/>
    <SolidColorBrush x:Key="PathButtonFillBrush.MouseOver" Color="#e4e6e5" options:Freeze="True"/>
    <!--Spotify Green-->
    <Color x:Key="AccentColor">#FF1ED760</Color>
    <SolidColorBrush x:Key="TextForegroundBrush" Color="#e4e6e5" options:Freeze="True"/>
    <SolidColorBrush x:Key="AltTextForegroundBrush" Color="#888888" options:Freeze="True"/>
    <SolidColorBrush x:Key="DefaultBorderBrush" Color="#444444" options:Freeze="True"/>
    <SolidColorBrush x:Key="LightBackgroundBrush" Color="#888888" options:Freeze="True"/>
    <SolidColorBrush x:Key="WindowBrush" Color="#1e1e1e" options:Freeze="True"/>
</ResourceDictionary>