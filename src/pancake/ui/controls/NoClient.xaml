<UserControl x:Class="pancake.ui.controls.NoClient"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="clr-namespace:pancake.ui"
             xmlns:local="clr-namespace:pancake.ui.controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="{DynamicResource WindowBrush}">
        <Button Padding="8,4" Margin="4" HorizontalAlignment="Right" VerticalAlignment="Center" Background="White" Command="{x:Static ui:PlayerCommands.OpenInSpotify}">
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" FontSize="10" Margin="0,0,4,0">Open</TextBlock>
                <Viewbox Height="16">
                    <Path Fill="{StaticResource SpotifyGreenBrush}" Data="{StaticResource geo_spotify_logo}"/>
                </Viewbox>
            </StackPanel>
        </Button>
    </Border>
</UserControl>
